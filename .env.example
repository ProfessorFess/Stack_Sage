# Stack Sage - Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# ============================================
# LLM API Keys (choose one based on your preference)
# ============================================

# OpenAI (GPT-4, GPT-3.5, etc.)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Other LLM options
# COHERE_API_KEY=your_cohere_api_key_here
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ============================================
# Application Settings
# ============================================

# Environment mode
ENVIRONMENT=development

# LLM Configuration
LLM_PROVIDER=openai  # Options: openai, anthropic, cohere, etc.
LLM_MODEL=gpt-4  # Model to use for reasoning
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./backend/data/chroma_db
CHROMA_COLLECTION_NAME=mtg_rules

# Logging
LOG_LEVEL=INFO
