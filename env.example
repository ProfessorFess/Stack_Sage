# Stack Sage Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# LLM Configuration
# ============================================
# Required: OpenAI API key for embeddings and LLM
OPENAI_API_KEY=sk-...

# Optional: Other LLM providers
# ANTHROPIC_API_KEY=sk-ant-...
# COHERE_API_KEY=...

# LLM Model Selection
# Options: gpt-4o-mini (cheap, fast), gpt-4o (better reasoning), gpt-3.5-turbo (cheapest)
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.5
LLM_MAX_TOKENS=2000

# ============================================
# Web Search (Optional)
# ============================================
# For meta/tournament data queries
# TAVILY_API_KEY=tvly-...

# ============================================
# Vector Store Configuration
# ============================================
# Path to Qdrant storage (defaults to backend/data/qdrant_storage)
# QDRANT_PATH=backend/data/qdrant_storage
QDRANT_COLLECTION_NAME=mtg_rules

# ============================================
# API Server Configuration
# ============================================
# CORS allowed origins (comma-separated)
CORS_ALLOW_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Environment
# ============================================
ENVIRONMENT=development

